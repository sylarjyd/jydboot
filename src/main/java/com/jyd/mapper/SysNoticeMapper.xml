<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jyd.mapper.SysNoticeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="sysNoticeResultMap" type="com.jyd.entity.SysNotice">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_user" property="createUser"/>
        <result column="update_user" property="updateUser"/>
        <result column="status" property="status"/>
        <result column="deleted" property="deleted"/>
        <result column="content" property="content"/>
        <result column="title" property="title"/>
        <result column="sub_title" property="subTitle"/>
        <result column="post_user" property="postUser"/>
        <result column="post_time" property="postTime"/>
        <result column="source" property="source"/>
        <result column="type" property="type"/>
    </resultMap>


    <sql id="Base_Column_List">
        
        create_time, update_time, create_user, update_user, status, deleted, content, title, sub_title, post_user, post_time, source, type
    </sql>

    <select id="selectSysNoticePage" resultMap="sysNoticeResultMap">
        select * from t_sys_notice where deleted = 0
    </select>

</mapper>
